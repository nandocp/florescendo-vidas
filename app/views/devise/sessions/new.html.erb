<h2>Entrar no Instituto Florescendo Vidas</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, placeholder: 'Digite aqui seu email' %>
  </div>

  <div class="field">
    <%= f.label :password, 'Senha' %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: 'Digite aqui sua senha' %>
  </div>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>
